#!/bin/bash

# Labels dos discos associados aos dias da semana
segunda="5pd1"
terca="5pd2"
quarta="5pd3"
quinta="5pd4"
sexta="5pd5"

# Diretório de destino de montagem (ponto de montagem fixo)
destino_montagem="/mnt/disco_dia"

# Função para exibir mensagens de erro e encerrar o script
erro() {
    echo "Erro: $1"
    exit 1
}

# Verificar e criar o diretório de destino de montagem, se necessário
if [ ! -d "$destino_montagem" ]; then
    mkdir -p "$destino_montagem" || erro "Não foi possível criar o diretório de montagem '$destino_montagem'"
fi

# Função para montar o disco do dia, usando o label especificado e a opção noserverino
montar_disco() {
    local disco_label=$1

    # Tentar montar o disco com a opção noserverino
    mount -o noserverino -L "$disco_label" "$destino_montagem" || erro "Falha ao montar o disco com label '$disco_label' em '$destino_montagem'"
    echo "Disco com label '$disco_label' montado com sucesso em '$destino_montagem'."
}

# Identificar o dia da semana e montar o disco associado
dia_semana=$(date +%u) # Retorna 1 (Segunda) a 5 (Sexta)

case $dia_semana in
    1) montar_disco "$segunda" ;;
    2) montar_disco "$terca" ;;
    3) montar_disco "$quarta" ;;
    4) montar_disco "$quinta" ;;
    5) montar_disco "$sexta" ;;
    *)
        erro "Hoje não é um dia útil de montagem (segunda a sexta-feira)"
        ;;
esac

echo "Processo de montagem concluído."
